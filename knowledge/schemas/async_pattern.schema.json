{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flowsight.dev/schemas/async_pattern.schema.json",
  "title": "FlowSight Async Pattern Schema",
  "description": "Schema for defining async patterns in FlowSight knowledge base",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/AsyncPattern"
  },
  "definitions": {
    "AsyncPattern": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the pattern"
        },
        "category": {
          "type": "string",
          "enum": ["timer", "workqueue", "irq", "thread", "ipc", "callback", "coroutine", "event"],
          "description": "Category of the async pattern"
        },
        "icon": {
          "type": "string",
          "description": "Emoji icon for UI display"
        },
        "context": {
          "$ref": "#/definitions/ExecutionContext"
        },
        "bind_patterns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BindPattern"
          },
          "description": "Patterns that bind a handler to an async mechanism"
        },
        "trigger_patterns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TriggerPattern"
          },
          "description": "Patterns that trigger the async handler"
        },
        "cancel_patterns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CancelPattern"
          },
          "description": "Patterns that cancel the async operation"
        },
        "handler_signature": {
          "$ref": "#/definitions/FunctionSignature"
        },
        "lifecycle": {
          "$ref": "#/definitions/Lifecycle"
        },
        "related_patterns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RelatedPattern"
          }
        }
      }
    },
    "ExecutionContext": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["process", "softirq", "hardirq", "any", "main_thread", "background"]
        },
        "can_sleep": {
          "type": "boolean"
        },
        "can_schedule": {
          "type": "boolean"
        },
        "preemptible": {
          "type": "boolean"
        }
      }
    },
    "BindPattern": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "type": "string",
          "description": "Regex pattern with named capture groups"
        },
        "handler_capture": {
          "type": "string",
          "default": "handler",
          "description": "Name of capture group for handler function"
        },
        "variable_capture": {
          "type": "string",
          "default": "var",
          "description": "Name of capture group for bound variable"
        },
        "scope": {
          "type": "string",
          "enum": ["local", "global", "struct_field"]
        },
        "type_constraints": {
          "type": "object",
          "properties": {
            "handler_type": { "type": "string" },
            "variable_type": { "type": "string" }
          }
        },
        "extra_captures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "TriggerPattern": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "type": "string"
        },
        "variable_capture": {
          "type": "string",
          "default": "var"
        },
        "condition": {
          "type": "object",
          "properties": {
            "requires_bind": { "type": "boolean" },
            "timing": {
              "type": "string",
              "enum": ["immediate", "deferred", "periodic"]
            }
          }
        },
        "extra_captures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "CancelPattern": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": { "type": "string" },
        "variable_capture": { "type": "string" },
        "behavior": {
          "type": "string",
          "enum": ["sync", "async", "trycancel"]
        }
      }
    },
    "FunctionSignature": {
      "type": "object",
      "properties": {
        "return_type": { "type": "string" },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "source": {
                "type": "string",
                "enum": ["bind_time", "trigger_time", "context"]
              }
            }
          }
        }
      }
    },
    "Lifecycle": {
      "type": "object",
      "properties": {
        "init_required": { "type": "boolean" },
        "cleanup_required": { "type": "boolean" },
        "ref_counted": { "type": "boolean" }
      }
    },
    "RelatedPattern": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "relationship": {
          "type": "string",
          "enum": ["extends", "uses", "conflicts"]
        }
      }
    }
  }
}

